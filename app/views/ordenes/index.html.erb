<h1>Ordenes</h1>

<table>
  <thead>
    <tr>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px">Platos pedidos en la orden</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px">Precio final a pagar</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px">Medio de pago</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px">Direccion de envio</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px">Hora estimada de entrega</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px">Estado del pedido</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px">Notas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ordenes.each do |ordene| %>
      <tr>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px"><%= ordene.platos_pedidos_en_la_orden %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px"><%= ordene.precio_final_a_pagar %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px"><%= ordene.medio_de_pago %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px"><%= ordene.direccion_de_envio %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px"><%= ordene.hora_estimada_de_entrega %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px"><%= ordene.estado_del_pedido %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px;margin-left:20px"><%= ordene.notas %></td>
        <td style="color:white;font-family: ubuntu;font-size: 100%;margin-top:20px;margin-left:20px"><%= link_to 'Mostrar', ordene %></td>
        <td style="color:white;font-family: ubuntu;font-size: 100%;margin-top:20px;margin-left:20px"><%= link_to 'Editar', edit_ordene_path(ordene) %></td>
        <td style="color:white;font-family: ubuntu;font-size: 100%;margin-top:20px;margin-left:20px"><%= link_to 'Eliminar', ordene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1 style="color:white;font-family: ubuntu;font-size: 400%;">Nueva Orden</h1>

<%= form_with(model: Ordene.new, local: true) do |form| %>

<div class="field" style="color:white;font-family: ubuntu;font-size: 150%;">
<%= form.label :nombre %>
<%= form.text_field :nombre %>
</div>

<div class="field" style="color:white;font-family: ubuntu;font-size: 150%;">
<%= form.label :precio %>
<%= form.text_field :precio %>
</div>

<div class="field" style="color:white;font-family: ubuntu;font-size: 150%;">
<%= form.label :descripcion %>
<%= form.text_area :descripcion %>
</div>

<div class="field" style="color:white;font-family: ubuntu;font-size: 150%;">
<%= form.label :cantidad_de_personas_sugeridas %>
<%= form.number_field :cantidad_de_personas_sugeridas %>
</div>

<div class="field" style="color:white;font-family: ubuntu;font-size: 150%;">
<%= form.label :valoracion %>
<%= form.number_field :valoracion %>
</div>
<div class="field" style="color:white;font-family: ubuntu;font-size: 150%;">
<%= form.label :imagen%>
<%= form.file_field :imagen%>
</div>

<div class="actions">
<%= form.submit %>
</div>
<% end %>




<h1 style="color:white;font-family: ubuntu;font-size: 400%;">Información</h1>

<p id="notice"><%= notice %></p>
<% if @platos %>
  <% @platos.each do |plato|%>
    <p style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px"> 
      <strong>Nombre:</strong>
      <%= plato.nombre %>
    </p>

    <p style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">
      <strong>Precio:</strong>
      <%= plato.precio %>
    </p>

    <p style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">
      <strong>Descripcion:</strong>
      <%= plato.descripcion %>
    </p>

    <p style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">
      <strong>Cantidad de personas sugeridas:</strong>
      <%= plato.cantidad_de_personas_sugeridas %>
    </p>

    <p style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">
      <strong>Valoracion:</strong>
      <%= plato.valoracion %>
    </p>
    <% if plato.imagen.attached? %>
      <img src="<%=(url_for(plato.imagen))%>">
    <% else %>
      <%= image_tag("no_image.jpg") %>
    <% end %>   
    <%= link_to 'Editar', edit_plato_path(plato), :style=>'color: white;font-family: ubuntu;font-size: 100%;margin-left:20px' %>
  <% end %>
 
<% end %>
<% if @platos==[] %>
  <p > No existen platos </p>
<% end %>

<%= link_to 'Atrás', restaurantes_path ,:style=>'color: white;font-family: ubuntu;font-size: 100%;margin-left:20px' %>


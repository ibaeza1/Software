<p id="notice"><%= notice %></p>

<h1 style="color:white;font-family: ubuntu;font-size: 400%;margin-top:20px">Platos</h1>

<table>
  <thead>
    <tr>
    <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">Id</th>

    <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">Nombre</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">Precio</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">Descripcion</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">Cantidad de personas sugeridas</th>
      <th style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px">Valoracion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platos.each do |plato| %>
      <tr>
      <td  style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px"><%= plato.id %></td>

      <td  style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px"><%= plato.nombre %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px"><%= plato.precio %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px"><%= plato.descripcion %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px"><%= plato.cantidad_de_personas_sugeridas %></td>
        <td style="color:white;font-family: ubuntu;font-size: 150%;margin-top:20px"><%= plato.valoracion %></td>
        <td ><%= link_to 'Show', plato, :style=>'color: white;font-family: ubuntu;font-size: 100%;margin-left:20px'  %></td>
        <td><%= link_to 'Destroy', plato, method: :delete, data: { confirm: 'Estas seguro?' }, :style=>'color: white;font-family: ubuntu;font-size: 100%;margin-left:20px'  %></td>

        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Edit', edit_plato_path(plato) %></td>
          <td><%= link_to 'Destroy', plato, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.try(:admin?) %>
  <%= link_to 'Nuevo Plato', new_plato_path %>
<% end %>


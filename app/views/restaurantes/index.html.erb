 <p id="notice"><%= notice %></p>
<h1 style="color:white;font-family: ubuntu;font-size: 400%;margin-top:0px">Restaurantes</h1>



<div class="row">
<% n = 1 %>
<% @restaurantes.each do |restaurante| %>

<!--<h5 style="color:white;font-family: ubuntu;font-size: 200%;margin-left:20px;margin-top:30px"><%= n %>. <%= restaurante.titulo %></h5>
-->
  <% if restaurante.avatar.attached? %>
<div class="p-3">
<a href="/restaurantes/ <%= n %>">


        <div class="product-div2">
          <img src="<%=(url_for(restaurante.avatar))%>" class="resto_foto">
            <div class="text-view transition">
                <h4><%= restaurante.titulo %></h4>
            </div></div>

</a>
</div>
  <% else %>
  <%= image_tag("no_image.jpg") %>
  <%= link_to 'Ver Restaurante', restaurante_path(restaurante),:style=>'color: white;font-family: ubuntu;font-size: 100%;margin-left:20px' %>
  <% end %>

<!--  <%= link_to 'Ver restaurante', restaurante, method: :delete, data: { confirm: 'Estas seguro?' }%>
-->
  <% n += 1 %>

<% end %>
</div>



<style>
body { background-image: url('/assets/nacha.png') !important;
    background-position: collapse !important;
    background-repeat: no-repeat !important;
    background-size: cover !important; } /* Adding !important forces the browser to overwrite the default style applied by Bootstrap */
</style>

<main class="container" role="main">
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">


<div class="collapse navbar-collapse" id="navbarsExampleDefault">

  <ul class="navbar-nav mr-auto">
  <% if signed_in? %>

  <%=link_to "Perfil", current_user,class: "nav-link", :style=>'color: white;font-family: ubuntu;font-size: 100%;margin-left:20px'%>


  <%=link_to "Mostrar Restaurantes", restaurantes_url, class: "nav-link", :style=>'color: white;font-family: ubuntu;font-size: 100%;margin-left:20px'%>


  <%= link_to "Salir", destroy_user_session_path, method: :delete ,class: "nav-link" ,:style=>'color: white;font-family: ubuntu;font-size: 100%;margin-left:20px'%>
  <% else %>
  <li class="nav-item active">
  <a class="nav-link" href="users/sign_in">Ingresar <span class="sr-only">(current)</span></a>
</li>

<li class="nav-item active">
  <a class="nav-link" href="users/sign_up">Registrarse <span class="sr-only">(current)</span></a>
</li>
<% end %>

      </div>

</nav>
</main>




<footer class="fixed-bottom">

  <div class="footer-copyright text-center py-0">
    <%= link_to 'Nuevo restaurante', new_restaurante_path ,:style=>'color: white;font-family: ubuntu;font-size: 140%;background-color: red'%>
    </div>
    <div class="footer-copyright text-center py-3">
     <font color="white">Desarrollado por Trejos Dream Team</font>
     </div>
  </footer>

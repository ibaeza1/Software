 <p id="notice"><%= notice %></p>

<h1>Restaurantes</h1>

<% n = 1 %>
<% @restaurantes.each do |restaurante| %>
  <h5><%= n %>. <%= restaurante.titulo %></h5>
  <% if restaurante.avatar.attached? %>
    <img src="<%=(url_for(restaurante.avatar))%>">
  <% else %>
  <%= image_tag("no_image.jpg") %>
  <% end %>
  <%= link_to 'Ver restaurante', restaurante_path(restaurante) %>
  <% n += 1 %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Platos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th>Cantidad de personas sugeridas</th>
      <th>Valoracion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platos.each do |plato| %>
      <tr>
        <td><%= plato.nombre %></td>
        <td><%= plato.precio %></td>
        <td><%= plato.descripcion %></td>
        <td><%= plato.cantidad_de_personas_sugeridas %></td>
        <td><%= plato.valoracion %></td>
        <td><%= link_to 'Show', plato %></td>
        <td><%= link_to 'Edit', edit_plato_path(plato) %></td>
        <td><%= link_to 'Destroy', plato, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Plato', new_plato_path %>
